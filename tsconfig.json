{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "allowJs": true,
    "incremental": true,
    "skipDefaultLibCheck": true,
    "rootDir": ".",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "voltagent/**.ts",
    "tests",
    "app",
    "app/**/*.{ts,tsx}",
    "prettier.config.js",
    "vitest.config.ts",
    "postcss.config.mjs",
    "eslint.config.js",
    "voltagent/**/*.{ts,tsx}",
    "/voltagent/**/*.{ts,tsx}",
    "lib",
    "lib/**/*.{ts,tsx}",
    "components/*.{ts,tsx}",
    "components/**/*.{ts,tsx}",
    "hooks/*.{ts,tsx}",
    "hooks/**/*.{ts,tsx}",
    "next-env.d.ts",
    "next.config.ts",
    "globalSetup.ts",
    "testSetup.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests",
    "**/__tests__",
    ".vscode",
    ".idea",
    ".git",
    ".github"
  ]
}
