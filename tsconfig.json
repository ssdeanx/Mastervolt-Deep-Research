{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src", "vitest.config.ts", "eslint.config.cjs"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts", "tests", "**/__tests__", ".vscode", ".idea", ".git", ".github"]
}
